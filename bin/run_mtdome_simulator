import asyncio
import logging

from lsst.ts import mtdomecom

# Set log level to DEBUG. This is safe to do since this script is not part of
# the ts-mtdomecom conda package.
logging.basicConfig(
    format="%(asctime)s:%(levelname)s:%(name)s:%(message)s",
    level=logging.DEBUG,
)


async def run_mtdome_simulator() -> None:
    log = logging.getLogger("MockMTDomeController")
    port = 5000
    log.info("Constructing mock controller.")
    mock_ctrl = mtdomecom.MockMTDomeController(port=port, log=log, keep_running=True)
    await mock_ctrl.start_task


if __name__ == "__main__":
    try:
        asyncio.run(run_mtdome_simulator())
    except (asyncio.CancelledError, KeyboardInterrupt):
        pass
